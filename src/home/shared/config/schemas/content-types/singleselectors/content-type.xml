                <options>
                    <option>
                        <label>myOption 1</label>
                        <value>o1</value>
                    </option>
                    <option>
                        <label>myOption 2</label>
                        <value>o2</value>
                    </option>
                    <option>
                        <label>myOption 3</label>
                        <value>o3</value>
                    </option>
                </options>
                <selector-type>DROPDOWN</selector-type>
            </config>
        </input>
        <input name="ss_combobox" type="SingleSelector">
            <label>Single Selector, combo-box</label>
            <immutable>false</immutable>
            <indexed>true</indexed>
            <occurrences minimum="0" maximum="0"/>
            <config>
                <options>
                    <option>
                        <label>myOption 1</label>
                        <value>o1</value>
                    </option>
                    <option>
                        <label>myOption 2</label>
                        <value>o2</value>
                    </option>
                    <option>
                        <label>myOption 3</label>
                        <value>o3</value>
                    </option>
                </options>
                <selector-type>COMBOBOX</selector-type>
            </config>
        </input>
    </form>
</type>
